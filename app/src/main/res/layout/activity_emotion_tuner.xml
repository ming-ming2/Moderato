<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🎚️ 감정 조율사"
                android:textSize="24sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:gravity="center" />

            <View
                android:layout_width="48dp"
                android:layout_height="48dp" />

        </LinearLayout>

        <!-- 현재 감정 섹션 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🎼 현재 감정"
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvCurrentEmotionIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="♪"
                    android:textSize="32sp"
                    android:textColor="@color/primary_pink"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvCurrentEmotion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="기쁨"
                        android:textSize="20sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvCurrentIntensity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mf (보통으로)"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="감정 강도 조절"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pp"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginEnd="8dp" />

                <SeekBar
                    android:id="@+id/seekBarCurrent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="4"
                    android:progress="2"
                    android:progressTint="@color/primary_pink"
                    android:thumbTint="@color/primary_pink" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ff"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- 화살표 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⬇️ 조율하기 ⬇️"
            android:textSize="16sp"
            android:textColor="@color/secondary_orange"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- 목표 감정 섹션 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🎯 목표 감정"
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvTargetEmotionIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="♩"
                    android:textSize="32sp"
                    android:textColor="@color/primary_purple"
                    android:layout_marginEnd="16dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTargetEmotion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="평온"
                        android:textSize="20sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTargetIntensity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mf (보통으로)"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="👆 변경"
                    android:textSize="12sp"
                    android:textColor="@color/secondary_orange" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="목표 강도 설정"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pp"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginEnd="8dp" />

                <SeekBar
                    android:id="@+id/seekBarTarget"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="4"
                    android:progress="2"
                    android:progressTint="@color/primary_purple"
                    android:thumbTint="@color/primary_purple" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ff"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- 조율 가이드 섹션 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📋 조율 가이드"
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/emotion_timeline_bg"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/tvActivityGuide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🔥➜🌊 화남을 평온으로 조절하기\n\n1️⃣ 4-7-8 호흡법 (5분)\n2️⃣ 차가운 물로 손목 식히기\n3️⃣ 클래식 음악 감상\n4️⃣ 천천히 걷기\n\n💡 격한 감정을 차분히 가라앉히는 시간이에요"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:lineSpacingExtra="4dp" />

            <Button
                android:id="@+id/btnSelectActivity"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="🎭 다른 활동 선택"
                android:textSize="12sp"
                android:textColor="@color/text_primary"
                android:background="@drawable/chord_button_bg"
                android:layout_marginTop="12dp"
                android:layout_gravity="end" />

        </LinearLayout>

        <!-- 조율 진행 섹션 -->
        <LinearLayout
            android:id="@+id/linearTuningProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginBottom="24dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🎼 조율 진행 상황"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <ProgressBar
                android:id="@+id/progressBarTuning"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:max="10"
                android:progress="0"
                android:progressTint="@color/primary_pink"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvTuningStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🎼 감정 조율을 시작합니다..."
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:gravity="center" />

        </LinearLayout>

        <!-- 조율 버튼 -->
        <Button
            android:id="@+id/btnStartTuning"
            style="@style/GradientButton"
            android:text="🎼 조율 시작"
            android:textSize="18sp"
            android:layout_marginTop="16dp" />

        <!-- 추가 도움말 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="💡 팁: 조율은 단순히 감정을 바꾸는 것이 아니라, 현재 감정을 이해하고 적절히 조절하는 과정입니다. 천천히 자신만의 속도로 진행해보세요."
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

</ScrollView>